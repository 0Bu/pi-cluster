{
  "extends": ["config:base"],
  "onboarding": false,
  "platform": "github",
  "configMigration": true,
  "automerge": true,
  "ignoreTests": true,
  "dependencyDashboard": true,
  "repositories": ["0Bu/pi-cluster"],
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["oznu/homebridge"],
      "versioning": "loose"
    }
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "^Chart.yaml$"
      ],
      "matchStringsStrategy": "combination",
      "matchStrings": [
        "appVersion:\\s+\"(?<currentValue>v[a-z0-9.-]+)\"",
        "image:\\s+\"(?<depName>[a-z/.-]+):(?<currentValue>[a-z0-9.-]+)\""
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    }
  ],
  "helmv3": {
    "fileMatch": [
      "^Chart.yaml$"
    ]
  }
}
